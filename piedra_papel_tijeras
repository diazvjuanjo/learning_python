# Juego de piedra papel o tijeras

import random

options = ("piedra", "papel", "tijera")

computer_wins = 0
user_wins = 0
round = 1

while True: 

  print("*" * 10)
  print("ROUND", round)
  print("*" * 10)

  marcador = f"Marcador -> Ordenador {computer_wins} || Usuario {user_wins}"
  print(marcador)
  
  user_option = input("piedra, papel o tijera -> ")
  user_option = user_option.lower()
  computer_option = random.choice(options)
  
  if not user_option in options:
    print("Es piedra papel o tijera, gilipollas, elige bien")
    continue
  #Solo sumamos una ronda cuando es opción válida  
  round += 1
  
  print("User option -> ", user_option)
  print("Computer option -> ", computer_option)
  
  if user_option == computer_option:
    print("Empate")
  elif user_option == "piedra":
    if computer_option == "tijera":
      print("gana usuario")
      print("piedra gana a tijera")
      user_wins += 1
    else:
      print("Papel gana a piedra")
      print("gana ordenador")
      computer_wins += 1
  elif user_option == "papel":
    if computer_option == "piedra":
      print ("piedra gana a tijera")
      print ("gana usuario")
      user_wins += 1
    else:
      print ("tijera gana a papel")
      print ("gana el ordenador")
      computer_wins += 1
  elif user_option == "tijera":
    if computer_option == "papel":
      print ("tijera gana a papel")
      print("gana usuario")
      user_wins += 1
    else:
      print("gano el ordenador")
      computer_wins += 1
      
  if computer_wins == 3:
    print("gana el PC, ha hecho trampas")
    break

  if user_wins == 3:
    print("gano yo, soy una máquina")
    break
